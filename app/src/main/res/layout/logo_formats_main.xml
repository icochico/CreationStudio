<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <RelativeLayout
        android:id="@+id/pickLogoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PICK LOGO"
            android:id="@+id/button"
            android:typeface="normal"
            android:textStyle="bold|italic"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/darker_gray"
            android:background="@android:color/background_dark"
            android:textSize="20dp"

            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <ListView
    android:id="@+id/list"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/mainBar"
        android:layout_below="@+id/pickLogoBar"
        android:divider="@android:color/black"
        android:dividerHeight="3.0sp">
    </ListView>

    <RelativeLayout
    android:id="@+id/mainBar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@android:color/background_dark"
    android:padding="5dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="false"
    android:layout_alignParentStart="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/btnCancel"
        android:typeface="normal"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/darker_gray"
        android:background="@android:color/background_dark"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="@dimen/logo_button_width"
        android:layout_height="@dimen/logo_button_height"
        android:layout_centerVertical="true"

        android:id="@+id/imgLogo"
        android:background="@drawable/w2klogo"
        android:layout_alignTop="@+id/btnCancel"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lowerSpaceBar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#7A0006"
        android:layout_above="@+id/mainBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/upperSpaceBar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#7A0006"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
